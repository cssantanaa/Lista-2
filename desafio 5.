num = int(input('Digite um número: '))
if num <= 1:
    print('Número não primo.')
else: 
    primo = True
    for i in range(2, int(num ** 0.5 + 1 )):
        if num % i == 0:
            primo = False
            break
    if primo:
        print('Número primo.') 
    else:
        print('Número não primo.')   
